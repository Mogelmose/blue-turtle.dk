# .env.example - Template for environment variables
# Copy this file to .env and fill in the actual values

# Database Configuration
POSTGRES_USER=database_user_here
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=database_name_here

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Upload Directory to bind to /uploads inside container
HOST_UPLOAD_ROOT=./.data/uploads
# For local non-container dev, set this to a local directory, e.g. ./.data/uploads.
UPLOAD_ROOT=/uploads

# Set to false only for temporary recovery while regenerating Prisma client.
REQUIRE_SESSION_VERSION=true

# Database URL
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public"

