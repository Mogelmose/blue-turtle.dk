# .env.example - Template for environment variables
# Copy this file to .env and fill in the actual values for local development

# Database Configuration
POSTGRES_USER=database_user_here
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=database_name_here

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Upload Directory (optional - uses default if not set)
UPLOADS_HOST_PATH=./.data/uploads
# Local dev upload root (optional - defaults to /uploads in containers)
UPLOAD_ROOT=./.data/uploads

# DATABASE URL
DATABASE_URL="postgresql://<db_user>:<db_password>@blue_turtle_db:5432/<db_name>?schema=public"

# LOCAL DATABASE URL
LOCAL_DATABASE_URL="postgresql://<db_user>:<db_password>@localhost:5432/<db_name>?schema=public"

