# .env.example - Template for environment variables
# Copy this file to .env and fill in the actual values

# Database Configuration
POSTGRES_USER=database_user_here
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=database_name_here

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Upload Directory to bind to /uploads inside container
HOST_UPLOAD_ROOT=./.data/uploads
# Local dev upload root path (optional - defaults to /uploads in container)
DEV_UPLOAD_ROOT=./.data/uploads

